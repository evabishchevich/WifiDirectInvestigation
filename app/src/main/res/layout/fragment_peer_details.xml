<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/peer_details_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/peer_details_btn_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/connect" />

    <Button
        android:id="@+id/peer_details_btn_disconnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/disconnect" />

    <Button
        android:id="@+id/peer_details_btn_send_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_data" />

    <Button
        android:id="@+id/peer_details_btn_send_multicast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_multicast" />

</merge>